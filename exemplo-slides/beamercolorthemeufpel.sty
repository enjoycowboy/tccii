\mode<presentation>

\definecolor{UFPelAzul}{RGB}{0,65,140}
\definecolor{UFPelAzulCiano}{RGB}{180,220,240}
\definecolor{UFPelLaranja}{RGB}{245,165,0}
\definecolor{UFPelVermelho}{RGB}{190,15,15}
\definecolor{UFPelAmarelo}{RGB}{250,210,0}
\definecolor{UFPelVerde}{RGB}{190,210,0}

% Normal text
\setbeamercolor{normal text}{fg=black}

% First page
\setbeamercolor*{title}{fg=black,bg=gray}
\setbeamercolor*{author}{fg=black,bg=gray}
\setbeamercolor*{date}{fg=black,bg=gray}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=white}
\setbeamercolor*{framesubtitle}{fg=white}
\setbeamercolor*{title in head/foot}{fg=UFPelAzul}
\setbeamercolor*{author in head/foot}{fg=UFPelAzul}

%Blocks
\setbeamercolor{block title}{bg=UFPelAmarelo!40,fg=black}
\setbeamercolor{block title alerted}{bg=UFPelVermelho!40,fg=black}
\setbeamercolor{block title example}{bg=UFPelVerde!40,fg=black}
\setbeamercolor{block body}{bg=UFPelAmarelo!10,fg=black}
\setbeamercolor{block body alerted}{bg=UFPelVermelho!10,fg=black}
\setbeamercolor{block body example}{bg=UFPelVerde!10,fg=black}

% Lists
\setbeamercolor*{item}{fg=UFPelAzul}

% Quotation and quote
\setbeamercolor*{quotation}{fg=black,bg=UFPelAzul!5}

% Verse
\setbeamercolor*{verse}{fg=black,bg=UFPelAzul!5}

% Abstract
\setbeamercolor*{abstract}{fg=black,bg=UFPelAzul!5}

% Table of contents 
\setbeamercolor*{structure}{fg=black}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}


\mode
<all>