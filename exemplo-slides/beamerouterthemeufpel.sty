% Frame title
\defbeamertemplate*{frametitle}{ufpel}[1][]
{

\begin{tikzpicture}
\useasboundingbox (0,-0.05) rectangle(\the\paperwidth,0.95);

% Three-colored line
 \fill[color=UFPelAzul] (-1,0) rectangle(0,1);
 \fill[color=UFPelLaranja] (0,0) rectangle(0.15,1);
